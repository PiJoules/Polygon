<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Filter Settings"
        android:textSize="30dp"
        android:layout_alignParentTop="true">
    </TextView>
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="@string/alpha_description">
    </TextView>
    <LinearLayout
        android:id="@+id/filter_val_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/description"
        android:background="#808080"
        android:visibility="visible">
        <TextView
            android:id="@+id/filter_val_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alpha: "
            android:textSize="20dp">
        </TextView>
        <EditText
            android:id="@+id/filter_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="0.5">
        </EditText>
    </LinearLayout>
    <TextView
        android:id="@+id/filter_val_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="@string/alpha_val_description"
        android:layout_below="@id/filter_val_entry">
    </TextView>
    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Done">
    </Button>
</RelativeLayout>